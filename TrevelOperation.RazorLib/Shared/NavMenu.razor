@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Components.Routing

<div class="h-full w-64 bg-base-200 text-base-content shadow-lg">
    <div class="p-4">
        <a href="/" class="text-2xl font-bold block mb-4 text-center link link-hover">MyAppLogo</a>
    </div>
    <ul class="menu p-4 space-y-1 text-base">
        @foreach (var item in navItems)
        {
            <li>
                <NavLink href="@item.Href" Match="@item.Match"
                         class="flex items-center space-x-3 rounded-lg"
                         ActiveClass="bg-primary text-primary-content font-semibold">
                    <span class="text-xl w-6 text-center">@((MarkupString)item.Icon)</span>
                    <span>@item.Label</span>
                </NavLink>
            </li>
        }
    </ul>
</div>

